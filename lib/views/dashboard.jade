extends ./layout.jade

block vars
  - var title = 'Home'

block content
  h5 API Key
  div.panel.panel-default
    div.panel-body
      div.form-group
        label.control-label.col-sm-1 Id:
        div.col-sm-4
          input.form-control(readonly, type='text', name='id', value=user.apiKeys.items[0].id)
        label.control-label.col-sm-1 Secret:
        div.col-sm-6
          input.form-control(readonly, type='text', name='secret', value=user.apiKeys.items[0].secret)
  div.panel.panel-default
    div.panel-body
      form.form-horizontal(action='/dashboard', method='post')
        div.col-sm-2
          label
            input(type="checkbox", name="catPerson", checked=(catPerson ? "checked" : undefined))
            | I am a cat person.
        div.col-sm-offset-8.col-sm-2
          button.btn.btn-default(type='submit') Save